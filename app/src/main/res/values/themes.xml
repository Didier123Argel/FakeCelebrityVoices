<resources>
    <!-- Base application theme. -->
    <style name="Theme.FakeCelebrityVoices" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blue_trs</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/background_main_gradient</item>

    </style>

    <style name="MainToolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">24sp</item>
        <item name="theme">@style/ToolbarTheme</item>
    </style>

    <style name="ToolbarTheme" parent="Theme.AppCompat">
        <item name="colorSecondary">@android:color/transparent</item>
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>